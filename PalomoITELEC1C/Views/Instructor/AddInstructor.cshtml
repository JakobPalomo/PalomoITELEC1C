@model Instructor;
<style>
    span{
        color:red;
    }
</style>

<h1>Add Instructor</h1>
<form asp-action="AddInstructor" method="post">
    <div asp-validation-summary="All"></div>
   @*  <div class="form-group">
        <label asp-for="Id" hidden></label>
        <input asp-for="Id" class="form-control" hidden/>

    </div> *@
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName"></span>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName"></span>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rank"></label>
        <span asp-validation-for="Rank"></span>
        <select asp-for="Rank" asp-items="Html.GetEnumSelectList(typeof(Rank))" class="form-control"><option disabled selected></option></select>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <span asp-validation-for="Phone"></span>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsTenured"></label>
        <span asp-validation-for="IsTenured"></span>
        <select asp-for="IsTenured" class="form-control">
            <option disabled selected></option>
            <option value="true">Permanent</option>
            <option value="false">Probationary</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate"></label>
        <span asp-validation-for="HiringDate"></span>
        <input asp-for="HiringDate" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

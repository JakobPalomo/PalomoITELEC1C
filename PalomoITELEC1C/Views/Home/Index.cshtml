@{
    ViewData["Title"] = "Home Page";
    DateTime date = DateTime.Now;
    
}

<div class="text-center">
 
    <div class="text-center">
        <h1 class="display-4">Welcome There User!</h1>
        @{
            string period;

            if (date.Hour >= 6 && date.Hour < 12)
            {
                period = "morning";
            }
            else if (date.Hour >= 12 && date.Hour < 18)
            {
                period = "afternoon";
            }
            else
            {
                period = "evening";
            }

            string formattedDate = date.ToString("dddd, MMMM d");

            <p>It is currently @period on @formattedDate</p>
        }
    </div>
</div>

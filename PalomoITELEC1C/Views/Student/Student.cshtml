@{
    var Name = "Jakob";
    var PrelimGrade = 99;
    var FinalGrade = 96;
    var SemGrade = (PrelimGrade + FinalGrade) / 2;

    var TransmutedGrade = 1.00;

    if (SemGrade<75)
    {
        TransmutedGrade = 5.00;
    }
    else if (SemGrade >= 75 && SemGrade <= 78)
    {
        TransmutedGrade = 3.00;
    }
    else if (SemGrade >= 79 && SemGrade <= 81)
    {
        TransmutedGrade = 2.75;
    }
    else if (SemGrade >= 82 && SemGrade <= 83)
    {
        TransmutedGrade = 2.50;
    }
    else if (SemGrade >= 84 && SemGrade <= 86)
    {
        TransmutedGrade = 2.25;
    }
    else if (SemGrade >= 87 && SemGrade <= 88)
    {
        TransmutedGrade = 2.00;
    }
    else if (SemGrade >= 89 && SemGrade <= 91)
    {
        TransmutedGrade = 1.75;
    }
    else if (SemGrade >= 92 && SemGrade <= 93)
    {
        TransmutedGrade = 1.50;
    }
    else if (SemGrade >= 94 && SemGrade <= 95)
    {
        TransmutedGrade = 1.25;
    }
    else if (SemGrade >= 96 && SemGrade <= 100)
    {
        TransmutedGrade = 1.0;
    }
}
<h1>Hello @Name here are your grades</h1>
<table>
    <tr>
        <td>Name</td>
        <td>@Name</td>
    </tr>
    <tr>
        <td>Prelim</td>
        <td>@PrelimGrade</td>
    </tr>
    <tr>
        <td>Final</td>
        <td>@FinalGrade</td>
    </tr>
    <tr>
        <td>Semestral Grade</td>
        <td>@SemGrade</td>
    </tr>
    <tr>
        <td>Transmuted Grade</td>
        <td>@TransmutedGrade</td>
    </tr>

</table>

<br />
<br />
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Birthday</th>
        <th>Major</th>
        <th>Details</th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Email</td>
            <td>@student.Birthday</td>
            <td>@student.Major</td>
            <td> <a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a> </td>
        </tr>
    }
</table>